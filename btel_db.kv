MDBoxLayout:
    orientation: "vertical"
    MDTopAppBar:
        title: "Our DB simple App"
        left_action_items: [["menu"]]
        elevation: 4
    MDLabel:
        text: "Available Items"
        halign: "center"
    MDLabel:
        id: item
        text: "No Items are available now"
        halign: "center"
    MDTextField:
        id: fname
        hint_text: "Enter first name"
        multline: False
    MDTextField:
        id: lname
        hint_text: "Enter last name"
        multline: False
    MDTextField:
        id: contact
        hint_text: "contact"
        multline: False
    MDRectangleFlatButton:
        text: "Submit User"
        size_hint:(1,.5)
        on_press: app.submit()
    MDRectangleFlatButton:
        text: "Show Users"
        size_hint:(1,.5)
        on_press: app.show_users()